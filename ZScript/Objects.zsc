class GWM_ExplosiveBarrel : ExplosiveBarrel
{
	Default
	{
		Tag "Explosive Barrel";
		+PUSHABLE
		Friction 0.8;
		DamageFactor "Kick", 0.1;
		PainChance "Kick", 256;
		DeathSound "objects/barrel_explode";
	}
	States
	{
		Spawn:
			XBAR A -1;
			Stop;
		Pain.Kick:
			XBAR A 1 {
				bDontThrust = false;
				bMissile = true;
				bStepMissile = true;
			}
			BNOB A 0 A_FaceTarget;
			Goto Rolling;
		Rolling:
			XBAR B 1 A_ChangeVelocity(-20, 0, 0, CVF_RELATIVE|CVF_REPLACE);
			Loop;
		Death:
			XBAR BCD 1;
			//TNT1 A 0 {
				
				
			//}
			//XBAR CDEFGHIJKL 2 Bright;
			TNT1 A 0 
			{
				A_Scream();
				A_SpawnitemEX("GWM_BarrelBlast",0,0,5);
				A_Explode();
			}
			TNT1 A 1050 Bright A_BarrelDestroy;
			TNT1 A 5 A_Respawn;
			Wait;
	}
}

