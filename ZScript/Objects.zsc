		Scale 0.6;
		renderstyle "Add";
		Reactiontime 125;
	}
	States
	{
		Spawn:
			YFIR A 1 bright A_SpawnitemEX("BlastDebrisFire",frandom(-9,9),frandom(-9,9),frandom(-9,9),frandom(-.5,.5),frandom(-.5,.5),frandom(2,3));
			TNT1 A 0 A_Countdown;
			TNT1 AAA 0 A_Jump(150,"Spawn");
