class GWM_Cell : Cell {} // solely exists to prevent an infinite loop
class GWM_CellPack : CellPack {} // exists for mapset
class GWM_CellPack_SpawnHeatsink : CellPack // optionally spawns a Melter heatsink
{
	override void BeginPlay()
	{
		Super.BeginPlay();
		if (random(0,4) == 4)
			Spawn("GWM_MelterHeatsink", self.pos);
	}
}

