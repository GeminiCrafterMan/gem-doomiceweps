class GWM_Player : DoomPlayer
{
	int prevPlayerState;
	override void Tick()
	{
		super.Tick();
		if (player && prevPlayerState != player.playerstate)
		{
			if (prevPlayerState == PST_DEAD && player.playerstate == PST_LIVE)	// for singleplayer resurrects
			{
				A_StartSound("player/respawn", CHAN_VOICE);
			}
			prevPlayerState = player.playerstate;
		}
	}
	Default
	{
		Player.SoundClass "GWM_Player";
		Player.StartItem "GWM_Pistol";
		Player.StartItem "GWM_Fist";
		Player.StartItem "Clip", 50;
		Player.WeaponSlot 1, "GWM_Mine", "GWM_Fist", "GWM_Impactor", "GWM_Icebreaker";
		Player.WeaponSlot 2, "GWM_Pistol", "GWM_MP40";
		Player.WeaponSlot 3, "GWM_Shotgun", "GWM_IceShotgun", "GWM_SuperShotgun", "GWM_PFSuperShotgun";
		Player.WeaponSlot 4, "GWM_Chaingun", "GWM_BurstRifle";
		Player.WeaponSlot 5, "GWM_RocketLauncher", "GWM_VenomCannon";
		Player.WeaponSlot 6, "GWM_PlasmaRifle", "GWM_Railgun";
		Player.WeaponSlot 7, "GWM_BFG9000";
	}
}