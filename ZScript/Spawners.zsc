class GWM_WeaponSpawner : RandomSpawner
{
	override void BeginPlay()
	{
		Super.BeginPlay();
		if (random(0,2) == 2)
			Spawn("GWM_Mine", self.pos);
	}
}

class GWM_ShellSpawner : GWM_WeaponSpawner replaces Shell
{
	Default
	{
		DropItem "GWM_Shell";
		DropItem "GWM_IceShell";
	}
}
