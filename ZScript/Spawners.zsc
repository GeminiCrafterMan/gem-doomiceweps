class ShellSpawner : Actor replaces Shell
{
	States
	{
		Spawn:
			TNT1 A 0 NoDelay A_JumpIf(random(0, 1), "Spawn_Shell");
		Spawn_IceShell:
			TNT1 A 0 A_SpawnItemEx("GWM_IceShell");
			Stop;
		Spawn_Shell:
			TNT1 A 0 A_SpawnItemEx("GWM_Shell");
			Stop;
	}
}

