class GWM_WeaponSpawner : Actor
{
	States
	{
		Spawn:
			TNT1 A 0 NoDelay A_JumpIf((random(0, 2)%2), "Spawn_Mine");
			TNT1 A 0 {return ResolveState("Spawn2");}
		Spawn_Mine:
			TNT1 A 0 A_SpawnItemEx("GWM_Mine");
			TNT1 A 0 {return ResolveState("Spawn2");}
		Spawn2:
			Stop;
	}
}
