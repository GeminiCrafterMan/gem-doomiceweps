			CIMP H 2 A_Pain;
			Goto See;
		Death:
			CIMP I 8;
			CIMP J 8 A_Scream;
			CIMP K 6;
			CIMP L 6 A_NoBlocking;
			CIMP M -1;
			Stop;
		XDeath:
			CIMP N 5 A_SpawnProjectile("GWM_CyberImpArm",32,-10,270);
			CIMP O 5 A_XScream;
			CIMP P 5;
			CIMP Q 5 A_NoBlocking;
			CIMP RST 5;
			CIMP U -1;
			Stop;
		Death.Fire:
			TNT1 A 0 {
				bNOBLOOD = true;
				A_SetTranslation("GWM_Burnt");
			}
			CIMP N 5 A_SpawnProjectile("GWM_CyberImpArm",32,-10,270);
			CIMP O 5 A_StartSound("monsters/burndeath");
			CIMP P 5;
			CIMP Q 5 A_NoBlocking;
			CIMP RST 5;
			CIMP U -1;
			Stop;
		Raise:
			TNT1 A 0 {bNOBLOOD = false;}
			CIMP MLKJI 8;
			Goto See;
	}
}
