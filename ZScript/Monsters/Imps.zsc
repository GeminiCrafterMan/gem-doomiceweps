		+THRUGHOST
		+SEEKERMISSILE
		+FORCEXYBILLBOARD
	}
	States
	{
		Spawn:
			NBAL A 5 Bright {
				A_SpawnItemEx("GWM_ShadePuff", 0,0,0, 0,0,0, 0, SXF_CLIENTSIDE);
