class GWM_ChaingunGuy : ChaingunGuy
{
	Default
	{
		//$Category Monsters
		Tag "Chaingunner";
		AttackSound "weapons/chngun";
		DropItem "GWM_Chaingun";
	}
	States
	{
		Missile:
			CPOS E 10 A_FaceTarget;
			CPOS FE 4 BRIGHT A_CustomBulletAttack(22.5, 0, 1, random(1,5)*3, "ZBulletPuff", 0, CBAF_NORANDOM, missile: "GWM_Tracer", spawnheight: 34, spawnofs_xy: 12);
			CPOS F 1 A_CPosRefire;
			Goto Missile+1;
	}
}

class GWM_HeavyRifleman : ChaingunGuy
{
	Default
	{
		//$Category Monsters
		Tag "Heavy Rifleman";
		AttackSound "weapons/riflesht";
		Obituary "$OB_HEAVYRIFLEMAN";
		DropItem "GWM_BurstRifle";
	}
	States
	{
		Spawn:
			HEVY AB 10 A_Look;
			Loop;
		See:
			HEVY AABBCCDD 4 A_Chase;
			Loop;
		Missile:
			HEVY E 2 A_FaceTarget;
			HEVY F 1 Bright A_CustomBulletAttack(22.5, 0, 1, random(1,5)*3, "ZBulletPuff", 0, CBAF_NORANDOM, missile: "GWM_Tracer", spawnofs_xy: 9);
			HEVY G 2 A_FaceTarget;
			HEVY F 1 Bright A_CustomBulletAttack(22.5, 0, 1, random(1,5)*3, "ZBulletPuff", 0, CBAF_NORANDOM, missile: "GWM_Tracer", spawnofs_xy: 9);
			HEVY G 2 A_FaceTarget;
			HEVY F 1 Bright A_CustomBulletAttack(22.5, 0, 1, random(1,5)*3, "ZBulletPuff", 0, CBAF_NORANDOM, missile: "GWM_Tracer", spawnofs_xy: 9);
			HEVY G 2;
			HEVY E 3 A_CPosRefire;
			Goto Missile;
		Pain:
			HEVY H 3;
			HEVY H 3 A_Pain;
			Goto See;
		Death:
			HEVY I 5;
			HEVY J 5 A_Scream;
			HEVY K 5 A_NoBlocking;
			HEVY L 5;
			HEVY M 5;
			HEVY N -1;
			Stop;
		XDeath:
			HEVY O 5;
			HEVY P 5 A_XScream;
			HEVY Q 5 A_NoBlocking;
			HEVY RS 5;
			HEVY T -1;
			Stop;
		Raise:
			HEVY M 5;
			HEVY LKJI 5;
			Goto See;
	}
}