	Default
	{
		Scale 0.75;
	}
	States
	{
		Spawn:
			ZFIR AABBCCDDEEFFGGHHIIJJKKLLMM 1 bright 
			{
			A_SpawnItemEX("GWM_DisCacodemonFireFX",0,frandom(-5,5),frandom(-5,5),frandom(6,15),frandom(-1,1),frandom(-2,2));
			A_ScaleVelocity(0.98);
			}
			ZFIR NOP 2 bright A_ScaleVelocity(0.9);
			Stop;
	}
}
