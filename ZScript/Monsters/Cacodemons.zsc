class GWM_Cacodemon : Cacodemon
{
	Default
	{
		//$Category Monsters
		//$Title "Cacodemon
		Tag "$TAG_CACODEMON";
		BloodColor "00 00 F9";
	}
	States
	{
		Missile:
			HEAD BC 5 A_FaceTarget;
			HEAD D 5 A_CustomComboAttack("GWM_CacodemonBall", 32, 35);
			Goto See;
		Death.Fire:
			TNT1 A 0 {
				bNOBLOOD = true;
				A_SetTranslation("GWM_Burnt");
			}
			HEAD G 8;
			HEAD H 8 A_StartSound("monsters/burndeath");
			HEAD IJ 8;
			HEAD K 8 A_NoBlocking;
			HEAD L -1 A_SetFloorClip;
			Stop;
		Raise:
			TNT1 A 0 {bNOBLOOD = false;}
			Goto Super::Raise;
	}
}

class GWM_CacodemonBall : CacodemonBall
{
	Default
	{
		DamageFunction (23);
	}
}

class GWM_DisCacodemon : Actor
{
	Default
	{
		//$Category Monsters
		//$Title "Dis Cacodemon
		Health 400;
		Radius 31;
		Height 56;
		Mass 400;
		Speed 8;
		PainChance 128;
		Monster;
		+FLOAT +NOGRAVITY
		SeeSound "caco/sight";
		PainSound "caco/pain";
		DeathSound "caco/death";
		ActiveSound "caco/active";
		Obituary "$OB_DISCACO";
		HitObituary "$OB_DISCACOHIT";
		Tag "$TAG_DISCACO";
	}
	States
	{
		Spawn:
			DISC A 10 A_Look;
			Loop;
		See:
			DISC A 3 A_Chase;
			Loop;
		Missile:
			DISC B 5 A_FaceTarget;
			DISC C 5 A_FaceTarget;
			DISC D 5 BRIGHT A_SpawnProjectile("GWM_DisCacodemonFire", 32); //A_CustomComboAttack("GWM_DisCacodemonBall", 32, 35);
			Goto See;
		Melee:
			DISC B 5 A_FaceTarget;
			DISC C 5 A_FaceTarget;
			DISC D 5 BRIGHT A_CustomMeleeAttack(35);
			Goto See;
		Pain:
			DISC E 3;
			DISC E 3 A_Pain;
			DISC F 6;
			Goto See;
		Death:
			DISC G 8;
			DISC H 8 A_Scream;
			DISC I 8;
			DISC J 8;
			DISC K 8 A_NoBlocking;
			DISC L -1 A_SetFloorClip;
			Stop;
		Death.Fire:
			TNT1 A 0 {
				bNOBLOOD = true;
				A_SetTranslation("GWM_Burnt");
			}
			DISC G 8;
			DISC H 8 A_StartSound("monsters/burndeath");
			DISC IJ 8;
			DISC K 8 A_NoBlocking;
			DISC L -1 A_SetFloorClip;
			Stop;
		Raise:
			TNT1 A 0 {bNOBLOOD = false;}
			DISC L 8 A_UnSetFloorClip;
			DISC KJIHG 8;
			Goto See;
	}
}
class GWM_DisCacodemonFire : GWM_FTFireShot
