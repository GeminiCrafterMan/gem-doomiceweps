class GWM_Berserk : Berserk replaces Berserk
{
	override void Touch(Actor toucher) {
		toucher.A_StartSound("player/berserk", CHAN_VOICE);
		Super.Touch(toucher);
	}
	States
	{
		Pickup:
			TNT1 A 0 {
				A_GiveInventory("PowerStrength");
				HealThing(100, 0);
				A_SelectWeapon("GWM_Fist");
			}
			Stop;
	}
}

