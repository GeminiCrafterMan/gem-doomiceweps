class IceWallColumn : Actor
{
	override void Tick()
	{
		A_Stop();
		super.Tick();
	}
	Default
	{
		Radius 15;
		Height 20;
		Alpha 0.7;
		Health 200;
		Scale 0;
		+NOBLOOD;
		+NoDamage;
		+SHOOTABLE;
		+NOGRAVITY;
		DeathSound "misc/icebreak";
		Renderstyle "Translucent";
	}
	States
	{
		Spawn:
			TNT1 A 0 A_SetScale(1,0);
			ICWL AAAAA 1 
			{
				A_Radiusgive("IceWallPushup",15,RGF_PLAYERS|RGF_MONSTERS,1);
				A_SetScale(1,Scale.Y+0.2);
			}
			
			Spawny:
			TNT1 A 0
			{
				bNODAMAGE = false;
				bSOLID = true;
				if (self.Health < 50)
					return ResolveState("Spawn4");
				if (self.Health < 100)
					return ResolveState("Spawn3");
				if (self.Health < 150)
					return ResolveState("Spawn2");
				return ResolveState(null);
			}
			ICWL A 1 Bright;
			loop;
			Spawn2:
			ICWL B 1 Bright;
			goto Spawny;
			Spawn3:
			ICWL C 1 Bright;
			goto Spawny;
			Spawn4:
			ICWL D 1 Bright;
			goto Spawny;
			
		Death:
			TNT1 A 0 A_Scream;
			SHGI BCDE 4 Bright;
			stop;
	}
}

