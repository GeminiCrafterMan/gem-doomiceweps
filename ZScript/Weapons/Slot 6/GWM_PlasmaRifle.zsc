class GWM_PlasmaBallFlareFX : actor
{
	Default
	{
		+NOINTERACTION;
		Renderstyle "add";
		Scale 1.7;
		Alpha 0.15;
	}
States
	{
	Spawn:
	PLSS X 2 nodelay bright;
	stop;
	}
}
	
	
	
	