class GWM_IceDamageEffect : Actor
{
	Default
	{
		+THRUACTORS;
		Scale 1.75;
	}
	States
	{
		Spawn:
			TNT1 A 0;
			TNT1 A 1 {
				if ((target != null && target.Health >= 0))
				{
					target.Speed = target.Speed / 2;
				}
			}
			TNT1 A 45;
			TNT1 A 0 {
				if ((target != null && target.Health >= 0))
				{
					target.Speed = target.Speed * 2; // restore original speed... if they aren't *dead*
				}
			}
			stop;
	}
}

class GWM_FlameDamageEffect : Actor
{
	Default
	{
		+NoInteraction;
		RenderStyle "Add";
		Alpha 1;
		Scale 0.75;
	}
	States
	{
		Spawn:
			TNT1 A 0 A_Jumpifinventory("PrimaryCharge",10,"Death");
			FIRE ABA 1 Bright A_Warp(AAPTR_TARGET,0,0,15);
			TNT1 A 0 A_Damagetarget(1,"Fire");
			FIRE BCB 1 Bright A_Warp(AAPTR_TARGET,0,0,15);
			TNT1 A 0 A_Damagetarget(1,"Fire");
			FIRE CDC 1 Bright A_Warp(AAPTR_TARGET,0,0,15);
			TNT1 A 0 A_Damagetarget(1,"Fire");
			FIRE DED 1 Bright A_Warp(AAPTR_TARGET,0,0,15);
			TNT1 A 0 A_Damagetarget(1,"Fire");
			FIRE EFE 1 Bright A_Warp(AAPTR_TARGET,0,0,15);
			TNT1 A 0 A_Damagetarget(1,"Fire");
			TNT1 A 0 A_Giveinventory("PrimaryCharge",1);
			Loop;
		Death:
			FIRE FGF 1 Bright A_Warp(AAPTR_TARGET,0,0,15);
			TNT1 A 0 A_Damagetarget(1,"Fire");
			FIRE GHG 1 Bright A_Warp(AAPTR_TARGET,0,0,15);
			TNT1 A 0 A_Damagetarget(1,"Fire");
			FIRE HXH 1 Bright A_Warp(AAPTR_TARGET,0,0,15);
			TNT1 A 0 A_Damagetarget(1,"Fire");
			Stop;
	}
}

