class GWM_Flash : Actor
{
	Default
	{
		+NOGRAVITY
	}
	States
	{
		Spawn:
			TNT1 AAAAAA 1 {
				A_Warp(AAPTR_TARGET, 0, 0, 32, 0, WARPF_COPYINTERPOLATION);
			}
			Stop;
	}
}
